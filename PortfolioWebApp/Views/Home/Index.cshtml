@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact sonrası mesaj -->
@if (ViewBag.Message != null)
{
    <p style="color: green; text-align:center;">@ViewBag.Message</p>
}

<!-- Home Section -->
<section id="home" class="flex s-around sw-80 m-auto">
    <div class="home-left flex items-center">
        <div class="home-content">
            <h6 class="welcomeText">Hi, I'm</h6>
            <h1 class="t-white">Kerem Aydın</h1>
            <h4 class="poppinss_animation">Software Developer</h4>
            <a href="~/Content/pdf/my_resume.pdf" target="_blank">
                <button class="btn poppins">Resume</button>
            </a>
            <a class="btn live poppins" id="hireme" href="#Contact">Let's Talk</a>
        </div>
    </div>
    <div class="home-right flex s-center items-center">
        <div class="circle flex s-center items-center" id="mainImage">
            <img src="~/Content/images/my_ar_emoji.png" alt="">
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about">
    <h1 class="t-center my-2 t-white f-2">About Me</h1>
    <div class="about-container flex s-around">
        <div class="about-left flex s-center items-center">
            <img src="~/Content/images/computer.png" alt="" style="width: 60%;">
        </div>
        <div class="about-right flex">
            <div class="about-content">
                <h1 class="t-white m-b-1 poppins">Kerem Aydın</h1>
                <p class="t-white poppins">Lorem ipsum dolor sit amet consectetur adipisicing elit...</p>
                <a class="btn" href="#Contact">Hire Me</a>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section id="skills">
    <h1 class="t-center my-2 t-white f-2">Skills</h1>
    <div class="services-container flex s-around h-50">
        <div class="skills-left flex s-center items-center">
            <img src="~/Content/images/pro.png" alt="">
        </div>
        <div class="skills-right flex items-center">
            <div class="skillss-container">
                <div class="java bar p-relative"><span class="bar-content left t-white">C, C#</span><span class="bar-content right-skills t-white">80%</span></div>
                <div class="html bar p-relative"><span class="bar-content left t-white">HTML</span><span class="bar-content right-skills t-white">70%</span></div>
                <div class="css bar p-relative"><span class="bar-content left t-white">CSS</span><span class="bar-content right-skills t-white">60%</span></div>
                <div class="js bar p-relative"><span class="bar-content left t-white">JavaScript</span><span class="bar-content right-skills t-white">65%</span></div>
                <div class="python bar p-relative"><span class="bar-content left t-white">Python</span><span class="bar-content right-skills t-white">50%</span></div>
                <div class="mysql bar p-relative"><span class="bar-content left t-white">MySQL</span><span class="bar-content right-skills t-white">40%</span></div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section -->
<section id="Projects">
    <h1 class="t-center my-2 t-white f-2">Projects</h1>
    <div class="projects-container flex s-center">
        @for (int i = 0; i < 3; i++)
        {
            <div class="projects-item flex f-col s-center items-center">
                <h1 class="t-white poppins">My Portfolio</h1>
                <p class="t-white poppins">This is My portfolio website which is created with HTML,CSS and MVC...</p>
                <div class="buttons flex s-around">
                    <a href="#" target="_blank" class="btn mx-1 m-top">GitHub</a>
                    <a href="#" target="_blank" class="btn m-top live">Live Link</a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Contact Me Section -->
<section id="Contact" class="m-b-1">
    <h1 class="t-center my-2 t-white f-2">Contact Me</h1>
    <div class="contact-container flex s-around items-centers">
        <div class="form" id="contactForm">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="name form-div">
                    <input type="text" name="Name" class="poppins" placeholder="Enter Your Name" required />
                </div>
                <div class="email form-div">
                    <input type="email" name="Email" class="poppins" placeholder="Enter Your Email" required />
                </div>
                <div class="phone form-div">
                    <input type="text" name="Number" class="poppins" placeholder="Enter Your Phone" />
                </div>
                <div class="textarea form-div">
                    <textarea name="Content" cols="30" rows="10" class="poppins" placeholder="Enter Messages" required></textarea>
                </div>
                <button type="submit" class="btn poppins" id="submit">Send</button>
            }
        </div>
    </div>
</section>
