@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
    <div style="display:flex; height:100vh;">
        <!-- Sol Menü -->
        <div style="width: 250px; background-color: #2c2c6c; padding: 2rem;">
            <h2 class="t-white">Admin Panel</h2>
            <ul style="list-style:none; padding-left:0;">
                <li style="margin-bottom:1rem;">
                    <a href="@Url.Action("Dashboard", "Admin")" class="t-white poppins">Mesajları Listele</a>
                </li>

                <li class="t-white poppins" style="margin-bottom:0.5rem; font-weight:bold;">Bilgi Düzenle</li>
                <li style="margin-left: 1rem; margin-bottom:0.5rem;">
                    <a href="@Url.Action("EditPersonalInfo", "Admin")" class="t-white poppins">Kişisel Bilgileri Düzenle</a>
                </li>
                <li style="margin-left: 1rem; margin-bottom:0.5rem;">
                    <a href="@Url.Action("EditSkills", "Admin")" class="t-white poppins">Yetenekleri Düzenle</a>
                </li>
                <li style="margin-left: 1rem; margin-bottom:1rem;">
                    <a href="@Url.Action("EditPortfolio", "Admin")" class="t-white poppins">Projeleri Düzenle</a>
                </li>

                <li style="margin-top:2rem;">
                    <a href="@Url.Action("Logout", "Admin")" class="btn">Çıkış Yap</a>
                </li>
            </ul>
        </div>

        <!-- İçerik Alanı -->
        <div style="flex: 1; padding: 2rem;">
            @RenderBody()
        </div>
    </div>
</body>
</html>
