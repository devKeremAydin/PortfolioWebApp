@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
    <div style="display:flex; height:100vh;">
        <!-- Sol Menü -->
        <div style="width: 220px; background-color: #2c2c6c; padding: 1rem;">
            <h3 class="t-white">Admin Panel</h3>
            <ul style="list-style:none; padding-left:0;">
                <li><a href="@Url.Action("Dashboard", "Admin")" class="btn m-top">Mesajları Listele</a></li>
                <li><a href="@Url.Action("EditPortfolio", "Admin")" class="btn m-top">Portfolyoyu Düzenle</a></li>
                <li><a href="@Url.Action("Logout", "Admin")" class="btn m-top">Çıkış Yap</a></li>
            </ul>
        </div>

        <!-- İçerik Alanı -->
        <div style="flex: 1; padding: 2rem;">
            @RenderBody()
        </div>
    </div>
</body>
</html>
