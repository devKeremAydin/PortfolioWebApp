@model IEnumerable<PortfolioWebApp.Models.Contact>
@{
    ViewBag.Title = "Mesajları Listele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="t-white" style="margin-bottom: 2rem;">Gelen Mesajlar</h2>

@if (Model != null && Model.Any())
{
    <div style="width: 100%; overflow-x: auto;">
        <table class="table table-bordered table-hover" style="width: 100%; color: white; background-color: #1f1f38;">
            <thead style="background-color: #2c2c6c; color: white;">
                <tr>
                    <th style="width: 15%;">Ad</th>
                    <th style="width: 20%;">Email</th>
                    <th style="width: 15%;">Telefon</th>
                    <th style="width: 40%;">Mesaj</th>
                    <th style="width: 10%;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Number</td>
                        <td>@item.Content</td>
                        <td>
                            @using (Html.BeginForm("DeleteMessage", "Admin", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.Id)
                                <button type="submit" class="btn" style="background-color: red; color: white;">Sil</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Tümünü Sil Butonu -->
    <div style="width: 100%; text-align: right; margin-top: 2rem;">
        @using (Html.BeginForm("DeleteAllMessages", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn" style="background-color: red; color: white;">Tüm Mesajları Sil</button>
        }
    </div>
}
else
{
    <p class="t-white">Hiç mesaj bulunamadı.</p>
}
