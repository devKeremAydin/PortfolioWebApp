@model PortfolioWebApp.Models.Skill

@{
    ViewBag.Title = "Yetenekleri Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="t-white">Yetenek Ekle</h2>

@using (Html.BeginForm("EditSkills", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="t-white">Yetenek Adı</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "C#, JavaScript..." })
    </div>

    <div class="form-group">
        <label class="t-white">Yüzde (%)</label>
        @Html.TextBoxFor(m => m.Percentage, new { @class = "form-control", placeholder = "80" })
    </div>

    <button type="submit" class="btn">Kaydet</button>
}

@if (ViewBag.Message != null)
{
    <p class="t-white" style="margin-top: 1rem;">@ViewBag.Message</p>
}

<hr />

<h3 class="t-white">Mevcut Yetenekler</h3>
@if (ViewBag.Skills != null)
{
    <ul class="t-white">
        @foreach (var skill in ViewBag.Skills as List<PortfolioWebApp.Models.Skill>)
        {
            <li>@skill.Name - @skill.Percentage%</li>
        }
    </ul>
}
@using (Html.BeginForm("ResetSkills", "Admin", FormMethod.Post))
{
    <button type="submit" class="btn" style="margin-top: 1rem; background-color: red; color: white;">Yetenekleri Sıfırla</button>
}
