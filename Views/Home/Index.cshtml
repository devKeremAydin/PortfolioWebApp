@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navbar Section -->
<nav id="navbar" class="flex s-around bg-color">
    <div class="left-nav">
        <h2 class="t-white">Portfolio</h2>
    </div>
    <div class="right-nav">
        <ul class="flex">
            <li><a href="#home" class="t-white roboto">Home <i class="fa-solid fa-house"></i></a></li>
            <li><a href="#about" class="t-white roboto">About Me <i class="fa-solid fa-user"></i></a></li>
            <li><a href="#skills" class="t-white roboto">Skills <i class="fa-solid fa-code"></i></a></li>
            <li><a href="#Projects" class="t-white roboto">Projects <i class="fas fa-project-diagram"></i></a></li>
            <li><a href="#Contact" class="t-white roboto">Contact <i class="fa-solid fa-rocket"></i></a></li>
        </ul>
    </div>
</nav>

<!-- Home Section -->
@{
    var info = ViewBag.PersonalInfo as PortfolioWebApp.Models.PersonalInfo;
}

<section id="home" class="flex s-around sw-80 m-auto">
    <div class="home-left flex items-center">
        <div class="home-content">
            <h6 class="welcomeText">Hi, I'm</h6>
            <h1 class="t-white">@((info != null) ? info.FirstName + " " + info.LastName : "Kerem Aydın")</h1>
            <h4 class="poppinss_animation">Software Developer</h4>
            @if (info != null && !string.IsNullOrEmpty(info.CvPath))
            {
                <a href="@Url.Content(info.CvPath)" target="_blank" class="btn poppins">Resume</a>
            }
            else
            {
                <a class="btn poppins">CV Eklenmedi</a>
            }
            <a class="btn live poppins" id="hireme" href="#Contact">Let's Talk</a>
        </div>
    </div>
    <div class="home-right flex s-center items-center">
        <div class="circle flex s-center items-center" id="mainImage">
            @if (info != null && !string.IsNullOrEmpty(info.ProfileImagePath))
            {
                <img src="@Url.Content(info.ProfileImagePath)" alt="">
            }
            else
            {
                <img src="@Url.Content("~/Content/images/my_ar_emoji.png")" alt="">
            }
        </div>
    </div>
</section>


<!-- About Section -->
<section id="about">
    <h1 class="t-center my-2 t-white f-2">About Me</h1>
    <div class="about-container flex s-around ">
        <div class="about-left flex s-center items-center">
            <img src="@Url.Content("~/Content/images/computer.png")" alt="" style="width: 60%;">
        </div>
        <div class="about-right flex">
            <div class="about-content">
                <h1 class="t-white m-b-1 poppins">Kerem Aydın</h1>
                <p class="t-white poppins">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta, recusandae ipsa laboriosam a, consectetur distinctio provident doloremque, nisi perspiciatis tenetur eos ipsam fugiat itaque ex facere? Harum ipsa voluptate alias!
                </p>
                <a class="btn" id="hireme" href="#Contact">Hire Me</a>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section id="skills">
    <h1 class="t-center my-2 t-white f-2">Skills</h1>
    <div class="services-container flex s-around h-50">
        <div class="skills-left flex s-center items-center">
            <img src="@Url.Content("~/Content/images/pro.png")" alt="">
        </div>
        <div class="skills-right flex items-center">
            <div class="skillss-container">
                @foreach (var skill in ViewBag.Skills as List<PortfolioWebApp.Models.Skill>)
                {
                    <div class="bar p-relative">
                        <span class="bar-content left t-white">@skill.Name</span>
                        <span class="bar-content right-skills t-white">@skill.Percentage%</span>
                        <div class="bar-inner" style="background-color: #fff; height: 10px; margin-top: 5px; position: relative;">
                            <div style="width:@skill.Percentage%; background-color:#00aaff; height: 100%; position: absolute;"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<!-- Projects Section -->
<!-- Projects Section -->
<section id="Projects">
    <h1 class="t-center my-2 t-white f-2">Projects</h1>
    <div class="projects-container flex s-center">
        @if (ViewBag.PortfolioItems != null)
        {
            foreach (var item in ViewBag.PortfolioItems as List<PortfolioWebApp.Models.PortfolioItem>)
            {
                <div class="projects-item flex f-col s-center items-center">
                    <h1 class="t-white poppins">@item.Title</h1>
                    <p class="t-white poppins">@item.Description</p>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="project image" style="width:100%; margin-top:1rem;" />
                    }
                </div>
            }
        }
        else
        {
            <p class="t-white">Henüz bir portfolyo projesi eklenmedi.</p>
        }
    </div>
</section>




<!-- Contact Me Section -->
<section id="Contact" class="m-b-1">
    <h1 class="t-center my-2 t-white f-2">Contact Me</h1>
    <div class="contact-container flex s-around items-centers">
        <div class="form" id="contactForm">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="name form-div">
                    <input type="text" name="Name" class="poppins" placeholder="Enter Your Name" required />
                </div>
                <div class="email form-div">
                    <input type="email" name="Email" class="poppins" placeholder="Enter Your Email" required />
                </div>
                <div class="phone form-div">
                    <input type="text" name="Number" class="poppins" placeholder="Enter Your Phone" />
                </div>
                <div class="textarea form-div">
                    <textarea name="Content" cols="30" rows="10" class="poppins" placeholder="Enter Messages" required></textarea>
                </div>
                <button type="submit" class="btn poppins" id="submit">Send</button>
            }
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer id="footer">
    <ul class="flex s-center w-80 m-auto my-2 res">
        <li><a href="#home" class="poppinss">Home</a></li>
        <li><a href="#about" class="poppinss">About</a></li>
        <li><a href="#skills" class="poppinss">Skills</a></li>
        <li><a href="#projects" class="poppinss">Projects</a></li>
        <li><a href="#portfolio" class="poppinss">Portfolio</a></li>
    </ul>
    <ul class="flex s-center w-80 font-awesome">
        <li><a href="#"><i class="fa-brands fa-linkedin-in"></i></a></li>
        <li><a href="#"><i class="fa-brands fa-github"></i></a></li>
        <li><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
    </ul>
    <p class="t-center my-2 poppins">&copy; All Rights Reserved - <span class="cpy-white poppins">devKeremAydın</span></p>
</footer>
